<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samelody.samples.compose">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.samelody.samples.compose.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.samelody.samples.compose.text.TextActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name="com.samelody.samples.compose.state.StateActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name="com.samelody.samples.compose.layout.StandardLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.samelody.samples.compose.text.TextFieldActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>